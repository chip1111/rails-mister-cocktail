<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "x", dose_path(dose), method: :delete %></li>

  <% end %>
</ul>


<p class="padded"><%= link_to "Back to Home", cocktails_path %></p>

<h3>Dosage & Ingredients</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: @ingredients.sort { |a,b| a.name.downcase <=> b.name.downcase } %>

  <%= f.submit "Submit", class: "btn btn-info" %>
<% end %>
